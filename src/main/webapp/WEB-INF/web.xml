<?xml version="1.0" encoding="UTF-8"?>


<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
        version="4.0">


  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
    <welcome-file>/jsp/common/index.jsp</welcome-file>
  </welcome-file-list>

  <filter>
    <filter-name>Encoding Filter</filter-name>
    <filter-class>com.epam.periodicals.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>Encoding Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>Home</servlet-name>
    <jsp-file>/jsp/user/home.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Registration</servlet-name>
    <jsp-file>/jsp/user/registration.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Admin-home</servlet-name>
    <jsp-file>/jsp/admin/adminHome.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Admin-home</servlet-name>
    <url-pattern>/admin-home</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AllPublications</servlet-name>
    <jsp-file>/jsp/user/showPublications.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AllPublications</servlet-name>
    <url-pattern>/publications</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Login</servlet-name>
    <jsp-file>/jsp/common/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Balance</servlet-name>
    <jsp-file>/jsp/user/balance.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Balance</servlet-name>
    <url-pattern>/balance</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Subscribed</servlet-name>
    <jsp-file>/jsp/user/subscribed.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Subscribed</servlet-name>
    <url-pattern>/subscribed</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Manage_publications</servlet-name>
    <jsp-file>/jsp/admin/manage_publications.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Manage_publications</servlet-name>
    <url-pattern>/manage_publications</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Manage_topics</servlet-name>
    <jsp-file>/jsp/admin/manage_topics.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Manage_topics</servlet-name>
    <url-pattern>/manage_topics</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Manage_users</servlet-name>
    <jsp-file>/jsp/admin/manage_users.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Manage_users</servlet-name>
    <url-pattern>/manage_users</url-pattern>
  </servlet-mapping>




  
</web-app>
